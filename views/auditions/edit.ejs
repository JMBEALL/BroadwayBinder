<% layout('/layouts/boilerplate')%>


<div class="flex justify-center">
    <form  method="POST" action="/auditions/<%= audition._id%>?_method=PUT" class="w-full max-w-lg">
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[theater]">
              Theater
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border  rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" 
            name="auditions[theater]" id="auditions[theater]" type="text" value="<%= audition.theater%>">
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[show]">
              Show
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="auditions[show]"
            name="auditions[show]"  type="text" value="<%= audition.show%>">
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[description]">
              Description
            </label>
            <!-- <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="auditions[description]" name="auditions[description]" type="text" value="<%= audition.description%>"> -->
            <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="auditions[description]" name="auditions[description]"><%= audition.description%></textarea>
            <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
          </div>
        </div>
        <div class="flex flex-wrap justify-between  -mx-3 mb-2">
          <div class="w-full  px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[date]">
              Date
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="auditions[date]" value="<%=audition.date%>"
            name="auditions[date]" type="date"
            >
          </div>
          <div class="w-full px-3 mb-6 md:my-8">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="audition[file]">
              Upload File
            </label>
            <div class="relative">
              <input type="file" class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-2 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="auditions[file]"
              name="auditions[file]" value="<%=audition.file%>" >
            </input>
              <button class="mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex-grow w-full " type="submit">
                Update Audition
              </button>
            </form>
            </div>
          </div>
        </div>
      </form>
    </div>




