<% layout('/layouts/boilerplate')%>

<div class="flex justify-center">
    <form method="POST" action="/auditions" class="w-full max-w-lg">
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[theater]">
              Theater
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border  rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white hover:bg-blue-200" 
            name="auditions[theater]" id="auditions[theater]" type="text" placeholder="Theater" required>
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[show]">
              Show
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 hover:bg-blue-200" id="auditions[show]"
            name="auditions[show]"  type="text" placeholder="Show" required>
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[description]">
              Description
            </label>
            <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 hover:bg-blue-200" id="auditions[description]" name="auditions[description]" type="text" placeholder="Successful audition? Write about it." required></textarea>
            <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
          </div>
        </div>
        <div class="flex flex-wrap justify-between   -mx-3 mb-2">
          <div class="sm:w-full m:w-full  lg:w-full  px-3 mb-6 md:mb-0 w-full ">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="auditions[date]">
              Date
            </label>
            <input class=" mb-8 appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 hover:bg-blue-200" id="auditions[date]" 
            name="auditions[date]" type="date" required>
          </div>
          <div class="w-full px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="audition[file]">
              Upload File
            </label>
            <div class="relative">
              <input type="file" class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-2 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500 hover:bg-blue-200" id="auditions[file]"
              name="auditions[file]" >
               
            </input>
   
  
              <!-- <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div> -->
              <button class="mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex-grow w-full " type="submit">
                Submit
              </button>
            </form>
            </div>
          </div>
        </div>
      </form>
    </div>




        